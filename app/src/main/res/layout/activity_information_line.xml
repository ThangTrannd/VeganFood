<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.login.InformationLineActivity">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView

            android:layout_marginLeft="70dp"
            android:textColor= "@color/black"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="Thông tin đơn hàng"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textStyle="bold"

        android:layout_marginLeft="22dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Địa chỉ đặt hàng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                >
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="152dp"
                    android:layout_height="92dp"
                    android:src="@drawable/avt"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="22dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặng thanh tùng"
                android:textSize="18dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/price1"
                android:layout_width="152dp"
                android:layout_height="20dp"
                android:text="123 Trình Văn Bô- Hà Nội"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/amount1"
                android:layout_width="152dp"
                android:layout_height="20dp"
                android:text="084884282"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="30dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:drawableEnd="@drawable/box1"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableEnd="@drawable/box2"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"/>
        <Button
            android:drawableEnd="@drawable/box3"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_marginLeft="22dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Thông tin sản phẩm đã mua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"/>

</LinearLayout>