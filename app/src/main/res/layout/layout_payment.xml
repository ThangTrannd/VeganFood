<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thanh toán"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

        <TextView
            android:id="@+id/tv_titlee1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv10"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:layout_below="@id/rl_payment"
            android:textColor="@color/black"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/tv_titlee1">

       <LinearLayout
           android:id="@+id/ll_tk"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="20dp">
           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/iv_check"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_check_circle"/>

         <androidx.appcompat.widget.AppCompatTextView
             android:id="@+id/tv_tK"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:textSize="18dp"
             android:textColor="@color/black"/>
       </LinearLayout>

       <LinearLayout
           android:id="@+id/ll_pay"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/ll_tk"
           android:orientation="horizontal"
           android:layout_margin="20dp">
           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/iv_check1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_check_circle"/>

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/tv_pay"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:text="Momo pay"
               android:textSize="18dp"
               android:textColor="@color/black"/>
       </LinearLayout>

       <LinearLayout
           android:id="@+id/ll_payment_when_meeting"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/ll_pay"
           android:orientation="horizontal"
           android:layout_margin="20dp">
           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/iv_check2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_check_circle"/>

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/tv_payment_when_meeting"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:text="Thanh toán khi nhận hàng"
               android:textSize="18dp"
               android:textColor="@color/black"/>
       </LinearLayout>
   </RelativeLayout>
</RelativeLayout>