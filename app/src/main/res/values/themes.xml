<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tocotoco" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/color_default</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/black</item>-->
        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">@color/white</item>
<!--        <item name="colorAccent">@color/black</item>-->
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="DemoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomStatusBar2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">#2E2828</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/white</item>
    </style>

</resources>