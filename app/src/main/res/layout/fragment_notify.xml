<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.notification.FragmentNotify">

    <RelativeLayout
        android:id="@+id/rlfavo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_48px" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_notifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Thông báo"
            android:textSize="@dimen/text_size_XXXL"
            android:textStyle="bold" />



    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_Facor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlfavo" />

</RelativeLayout>