<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_85dp"
    android:padding="@dimen/dimen_10dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_item_product_favorite">
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:gravity="start">
        <ImageView
            android:id="@+id/img_product"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/dimen_50dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_13sp"
                android:text="1x Trà xanh"
                android:layout_weight="1"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/sf_pro_text_regular"/>
            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_13sp"
                android:text="Cỡ L"
                android:layout_weight="1"
                android:fontFamily="@font/sf_pro_regular"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_price_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.000đ"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/color_44494D"
            android:fontFamily="@font/sf_pro_text_regular"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25.000đ"
            android:textSize="@dimen/text_size_13sp"
            android:layout_weight="1"
            android:textColor="@color/color_EE0033"
            android:fontFamily="@font/sf_pro_text_regular"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>