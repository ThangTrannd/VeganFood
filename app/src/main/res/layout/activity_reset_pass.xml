<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.login.ResetPassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnBack"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thay đổi mật khẩu"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:id="@+id/tvthaydoimatkhau"
            android:textSize="17dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu cũ"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/tvmatkhaucu"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/passcu"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập mật khẩu cũ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu mới"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/tvmatkhaumoi"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/passmoi"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập mật khẩu mới"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận mật khẩu"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/tvxacnhanmatkhau"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_marginLeft="15dp"
        android:id="@+id/passnew"
        android:layout_marginTop="10dp"
        android:hint="Xác nhận mật khẩu mới"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btnsave"
        android:layout_width="200dp"
        android:text="Lưu"
        android:layout_gravity="center"
        android:backgroundTint="#4CAF50"
        android:layout_height="wrap_content"></Button>


</LinearLayout>