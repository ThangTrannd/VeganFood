<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".feature.order.SuccessFragment">

    <data>

    </data>

    <LinearLayout
        android:background="@drawable/background_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_32dp">

        <ImageView
            android:layout_marginTop="@dimen/dimen_100dp"
            android:src="@drawable/success"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_80dp"
            android:gravity="center"
            android:text="Đơn hàng của bạn đang được giao"
            android:textColor="@color/black"
            android:textSize="@dimen/size_28sp" />

        <Button
            android:id="@+id/btn_follow_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_120dp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:background="@drawable/custom_buttom"
            android:fontFamily="@font/league_spartan_regular"
            android:padding="@dimen/dp_8"
            android:text="Theo dõi đơn hàng "
            android:textAppearance="@style/TextNormal"
            android:textColor="@color/white"
            android:textStyle="normal"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/tv_back_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:fontFamily="@font/league_spartan_regular"
            android:textAppearance="@style/TextNormal"
            android:text="Trở về màn hình chính"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp" />

    </LinearLayout>

</layout>